# don't use that hideous default of black on white
xterm*background:black
xterm*foreground:light grey

# use standard X11 clip buffers
xTerm*selectToClipBoard: true

xterm*VT100.Translations: #override \
  # change font-size like browsers                \n \
  Ctrl Shift <Key> minus: smaller-vt-font()       \n \
  Ctrl Shift <Key> plus:   larger-vt-font()       \n \
  Ctrl Shift <Key> 0:         set-vt-font(d)      \n \
                                                  \n \
  # ^C and ^V for copy-pasta			  \n \
  Ctrl Shift <Key> V: insert-selection(CLIPBOARD) \n \
  Ctrl Shift <Key> C:  copy-selection(CLIPBOARD)

