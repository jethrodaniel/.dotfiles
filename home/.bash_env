#
# Path changes, mostly. Also a good place for program settings that
# want to be in ~/.bashrc

# To use homeshick
source "$HOME/.homesick/repos/homeshick/homeshick.sh"
source "$HOME/.homesick/repos/homeshick/completions/homeshick-completion.bash"

# To use SDKMAN!
export SDKMAN_DIR="$HOME/.sdkman"
[[ -s "$HOME/.sdkman/bin/sdkman-init.sh" ]] && source "$HOME/.sdkman/bin/sdkman-init.sh"

# Ruby oci8 support
# See <https://github.com/kubo/ruby-oci8/blob/master/docs/install-instant-client.md>
export LD_LIBRARY_PATH="/opt/oracle/instantclient_18_3"

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# System editor
export EDITOR=vim
