# vi: set ft=ruby :

Vagrant.configure("2") do |c|
  c.vm.define "centos" do |os|
    os.vm.box = "centos/7"
    os.vm.hostname = "centos"
    os.vm.provision "shell", :inline => <<~SH
      yum install -y ruby rake
      cp /vagrant/ransomware-0.1.0.gem .
      gem install ransomware-0.1.0.gem
    SH
    # os.vm.provision "shell", :path => "./scripts/centos.sh"
  end

  c.vm.define "ubuntu" do |os|
    os.vm.box = "bento/ubuntu-18.04"
    os.vm.hostname = "ubuntu"
    os.vm.provision "shell", :path => "./scripts/ubuntu.sh"
  end

  c.vm.define "kali" do |os|
    os.vm.box = "kalilinux/rolling"
    os.vm.hostname = "kali"
    os.vm.provision "shell", :path => "./scripts/kali.sh"
  end
end
